<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied while the app process is starting -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Android 12 splash configuration -->
        <!-- ðŸ‘‡ Added line to force background gradient -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowSplashScreenBackground">#2E2B5F</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/android12branding</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/android12splash</item>
        <item name="android:windowSplashScreenIconBackgroundColor">#2E2B5F</item>
    </style>
    <!-- Theme used once the Flutter UI starts -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- ðŸ‘‡ Force the same gradient background until Flutter paints -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
</resources>
